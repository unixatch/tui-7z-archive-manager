__tui7zArchiveM() {
  local curcontext="$curcontext" prev
  typeset -A opt_args
  prev=$words[CURRENT-1]
  
  case $prev in
    --path | -p)
      _files
      return 0
    ;;
    --pagesize | -ps)
      local numbers=$(for i in {0..100} ;do echo -n " $i" ;done)
      _arguments "*: :($numbers)"
      return 0
    ;;
    -*)
      # Short versions only
      _arguments '*::(
        p[path to archive]
        s[skip newly created archive]
        ps[size of prompts]
        c[create new archive]
        y[auto-confirm]
        b[get back to previous archive]
        r[search recursively]
        nr[search only opened folders]
        h[help text]
        hs[help text for shortcuts]
        v[version number]
      )'
      return 0
    ;;
    --*)
      # Full versions
      _arguments '*::(
        path[path to archive]
        skip[skip newly created archive]
        pagesize[size of prompts]
        create[create new archive]
        yes[auto-confirm]
        back[get back to previous archive]
        recursive[search recursively]
        no-recursive[search only opened folders]
        help[help text]
        help-shortcuts[help text for shortcuts]
        version[version number]
      )'
      return 0
    ;;
    *)
      # Full and short versions
      _arguments '*: :(
        --path[path to archive]
        -p[path to archive]
        --skip[skip newly created archive]
        -s[skip newly created archive]
        --pagesize[size of prompts]
        -ps[size of prompts]
        --create[create new archive]
        -c[create new archive]
        --yes[auto-confirm]
        -y[auto-confirm]
        --back[get back to previous archive]
        -b[get back to previous archive]
        --recursive[search recursively]
        -r[search recursively]
        --no-recursive[search only opened folders]
        -nr[search only opened folders]
        --help[help text]
        -h[help text]
        --help-shortcuts[help text for shortcuts]
        -hs[help text for shortcuts]
        --version[version number]
        -v[version number]
      )'
      return 0
    ;;
  esac
}
__tui7zArchiveM